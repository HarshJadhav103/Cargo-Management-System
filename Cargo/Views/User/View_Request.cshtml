@model IEnumerable<Cargo.Models.User_Cargo>

@{
    ViewBag.Title = "View_Request";
    Layout = "~/Views/User/Inner_LayoutPage.cshtml";
}

<div style="overflow-x:auto;width:1300px">

    <table class="table">
        <tr>
          @*  <th>
                Html.DisplayFor(model => model.RequestId)
                RequestID
            </th>*@
            <th>
                @*@Html.DisplayNameFor(model => model.CargoId)*@
                Company Name
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.WorkCategory)*@
                Work Category
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.FromLocation)*@
                From Locations
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.ToLocation)*@
                To Location
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.RequestDate)*@
                Request Date
            </th>
