                    @Html.DisplayFor(modelItem => item.WorkCategory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FromLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ToLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequestDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryDate)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>*@
                <td>
                    @Html.ActionLink("Add_Item", "Add_Item", new { id = item.RequestId }) |
                    @Html.ActionLink("View_Item", "View_Item", new { id = item.RequestId }) |
