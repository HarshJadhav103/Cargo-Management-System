@model IEnumerable<Cargo.Models.View_Item>

@{
    ViewBag.Title = "View_Item";
    Layout = "~/Views/User/Inner_LayoutPage.cshtml";
}




<table class="table">
    <tr>
       
        <th>
            Request-ID
        </th>
        <th>
            Item-Name
        </th>
        <th>
            Qty
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.RequestId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Qty)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditItem", new { id=item.ItemId }) |
           
            @Html.ActionLink("Delete", "DeleteItem", new { id=item.ItemId },new { onclick = "return confirm('Are You Sure?');" })
        </td>
    </tr>
}

</table>
